{
    "version": 2,
    "builds": [
      {
        "src": "/public/**",
        "use": "@vercel/static-build",
        "config": {
          "zeroConfig": true
        }
      },
      {
        "src": "/index.php",
        "use": "@now/php",
        "config": {
          "maxLambdaSize": "1024mb"
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/public/$1" }
    ]
  }
  