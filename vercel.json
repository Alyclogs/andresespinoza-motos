{
    "version": 2,
    "builds": [
      {
        "src": "/public/**",
        "use": "@vercel/php",
        "config": { "maxLambdaSize": "1024mb" },
        "env": {
          "PHP_VERSION": "8.0"
        },
        "functions": {
          "api/**/*.php": {
            "includeFiles": ["composer.json", "composer.lock"],
            "runtime": "vercel@1.0",
            "environment": {
              "VERCEL": "1",
              "NODE_VERSION": "16"
            },
            "cleanUrls": true,
            "forceCleanUrls": true,
            "memory": 1024
          }
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/public/$1" }
    ],
    "install": {
      "include": ["api/**"]
    }
  }
  