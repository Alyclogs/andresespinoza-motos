{
    "version": 2,
    "builds": [
      {
        "src": "/public/**",
        "use": "@vercel/static-build",
        "config": {
          "zeroConfig": true
        }
      },
      {
        "src": "/index.php",
        "use": "@vercel/php",
        "config": {
          "maxLambdaSize": "1024mb"
        },
        "functions": {
          "api/**/*.php": {
            "includeFiles": ["composer.json", "composer.lock"],
            "runtime": "vercel@1.0",
            "environment": {
              "PHP_VERSION": "8.0"
            },
            "cleanUrls": true,
            "forceCleanUrls": true,
            "memory": 1024
          }
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/public/$1" }
    ]
  }
  